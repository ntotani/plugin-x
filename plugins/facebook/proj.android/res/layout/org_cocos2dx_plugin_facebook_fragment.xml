<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/org_cocos2dx_plugin_facebook_activity_vertical_margin"
    android:paddingLeft="@dimen/org_cocos2dx_plugin_facebook_activity_horizontal_margin"
    android:paddingRight="@dimen/org_cocos2dx_plugin_facebook_activity_horizontal_margin"
    android:paddingTop="@dimen/org_cocos2dx_plugin_facebook_activity_vertical_margin"
    tools:context="org.cocos2dx.plugin.FacebookActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/org_cocos2dx_plugin_facebook_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/org_cocos2dx_plugin_facebook_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/org_cocos2dx_plugin_facebook_editText1"
        android:layout_below="@+id/org_cocos2dx_plugin_facebook_editText1"
        android:contentDescription="@string/org_cocos2dx_plugin_facebook_image_desc"
        android:src="@android:drawable/gallery_thumb" />

    <ImageButton
        android:id="@+id/org_cocos2dx_plugin_facebook_imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/org_cocos2dx_plugin_facebook_imageView1"
        android:layout_alignTop="@+id/org_cocos2dx_plugin_facebook_imageView1"
        android:contentDescription="@string/org_cocos2dx_plugin_facebook_image_desc"
        android:src="@android:drawable/ic_delete" />

</RelativeLayout>
