<com.unicon_ltd.konect.sdk.FelloRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/com_unicon_ltd_konect_sdk_notification_popup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/com_unicon_ltd_konect_sdk_transparent"
    android:clickable="true"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/com_unicon_ltd_konect_sdk_shadow"
        android:orientation="vertical"
        android:padding="4dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:background="@drawable/com_unicon_ltd_konect_sdk_shape_header"
            android:orientation="horizontal" >

            <View
                android:layout_width="2dp"
                android:layout_height="32dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/com_unicon_ltd_konect_sdk_place_holder" />

            <TextView
                android:id="@+id/com_unicon_ltd_konect_sdk_confirm_quit_popup_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/com_unicon_ltd_konect_sdk_confirm_quit_popup_title"
                android:textColor="@color/com_unicon_ltd_konect_sdk_blue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@color/com_unicon_ltd_konect_sdk_light"
            android:gravity="center_vertical"
            android:maxHeight="144dp"
            android:minHeight="48dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp" >

            <TextView
                android:id="@+id/com_unicon_ltd_konect_sdk_confirm_quit_popup_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="6"
                android:scrollHorizontally="true"
                android:text="@string/com_unicon_ltd_konect_sdk_confirm_quit_popup_message"
                android:textColor="@color/com_unicon_ltd_konect_sdk_dark"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp" >

            <Button
                android:id="@+id/com_unicon_ltd_konect_sdk_popup_button_negative"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/com_unicon_ltd_konect_sdk_selector_button_negative"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="2dp"
                android:text="@string/com_unicon_ltd_konect_sdk_confirm_quit_popup_button_negative"
                android:textColor="@color/com_unicon_ltd_konect_sdk_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/com_unicon_ltd_konect_sdk_popup_button_positive"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/com_unicon_ltd_konect_sdk_selector_button_positive"
                android:gravity="center"
                android:paddingBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="2dp"
                android:text="@string/com_unicon_ltd_konect_sdk_confirm_quit_popup_button_positive"
                android:textColor="@color/com_unicon_ltd_konect_sdk_white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</com.unicon_ltd.konect.sdk.FelloRelativeLayout>